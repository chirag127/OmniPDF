# Backend Environment Variables

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Database Configuration (if user accounts are implemented)
DATABASE_URL=postgresql://user:password@localhost:5432/omnipdf

# JWT Configuration (if authentication is implemented)
JWT_SECRET=your-super-secret-jwt-token
JWT_EXPIRES_IN=1d

# Google OAuth (if Google Sign-In is implemented)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Redis Configuration (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# File Upload Configuration
MAX_FILE_SIZE=52428800 # 50MB in bytes
TEMP_FILE_EXPIRY=3600 # 1 hour in seconds

# Logging
LOG_LEVEL=debug
